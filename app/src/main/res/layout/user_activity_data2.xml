<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="@dimen/activity_margin"
        android:background="@drawable/bg_round_white"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="钓龄" />

        <View
            android:layout_width="1.2dp"
            android:layout_height="match_parent"
            android:background="#e5e5e5" />

        <EditText
            android:id="@+id/et_age"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入您的钓龄"
            android:inputType="number"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_round_white"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="擅长" />

        <View
            android:layout_width="1.2dp"
            android:layout_height="match_parent"
            android:background="#e5e5e5" />

        <EditText
            android:id="@+id/et_good_at"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入您擅长的项目"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="14sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:background="@drawable/bg_round_white"
        android:gravity="top"
        android:hint="签名 （150字之内）"
        android:minHeight="120dp"
        android:padding="8dp"
        android:textSize="14sp" />

    <com.jude.tagview.TAGView
        android:id="@+id/tg_done"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="48dp"
        app:tag_color="?colorPrimary"
        app:tag_text="完成"
        app:tag_text_size="18sp" />

</LinearLayout>