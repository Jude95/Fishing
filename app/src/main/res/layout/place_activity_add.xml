<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/shadow_top"
                />
            <LinearLayout
                android:id="@+id/view_style"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:text="地点"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"/>

                <TextView
                    android:id="@+id/tv_style"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    tool:text="南岸区"
                    android:text="点击选择位置"
                    android:gravity="center_vertical"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/shadow_bottom"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/shadow_top"
                />
            <LinearLayout
                android:id="@+id/view_title"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:text="名字"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"/>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    tool:text="南山神塘"
                    android:text="请输入钓点名字"
                    android:gravity="center_vertical"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:id="@+id/view_picture"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:text="照片"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"/>

                <TextView
                    android:id="@+id/tv_picture_count"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    tool:text="2张"
                    android:text="请添加钓点照片"
                    android:gravity="center_vertical"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_drop"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:id="@+id/view_member_count"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:text="消费模式"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"/>

                <TextView
                    android:id="@+id/tv_member_count"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    tool:text="斤塘"
                    android:text="请选择收费类型"
                    android:gravity="center_vertical"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_drop"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:id="@+id/view_cost"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:text="人均花费"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"/>

                <TextView
                    android:id="@+id/tv_cost"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    tool:text="120元"
                    android:text="请输入人均花费"
                    android:gravity="center_vertical"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_drop"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/shadow_bottom"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/shadow_top"
                />
            <LinearLayout
                android:id="@+id/view_date"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:text="鱼种"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    tool:text="鲤鱼，鲫鱼，沼跃鱼"
                    android:text="请输入约会时间"
                    android:gravity="center_vertical"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_drop"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:id="@+id/view_pool"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:text="水系"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"/>

                <TextView
                    android:id="@+id/tv_pool"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    tool:text="江河"
                    android:text="请输入约会时间"
                    android:gravity="center_vertical"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_drop"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:id="@+id/view_server"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:text="服务"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"/>

                <TextView
                    android:id="@+id/tv_server"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    tool:text="夜钓,大鱼,住宿,餐饮"
                    android:text="请输入约会地点"
                    android:gravity="center_vertical"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_drop"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:id="@+id/view_address"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:text="联系方式"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"/>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    tool:text="15683384295"
                    android:text="请输入约会地点"
                    android:gravity="center_vertical"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_drop"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:id="@+id/view_content"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="96dp"
                    android:layout_height="match_parent"
                    android:text="鱼塘介绍"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"/>

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    tool:text=""
                    android:text="请输备注"
                    android:gravity="center_vertical"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_drop"
                    android:layout_marginRight="16dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/shadow_bottom"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="提交"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:background="?colorPrimary"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>