<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <com.jude.tagview.TAGView
        android:id="@+id/preview"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="10dp"
        app:tag_color="@color/red"
        app:tag_radius="36dp"
        app:tag_text_color="@color/red"
        app:tag_stroke_width="2dp"/>
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/preview"
        android:layout_alignTop="@+id/preview"
        android:layout_above="@+id/tool"
        android:ellipsize="end"
        android:layout_marginRight="16dp"
        android:lines="3"
        tools:text="首先原子晶体断裂的时候化学键已经断了。另外破碎的时候会有小碎片，除非你你能把所有碎片回归原位，你是没办法不利用粘合剂把断口完全贴合的。"/>
    <LinearLayout
        android:id="@+id/tool"
        android:layout_toRightOf="@+id/preview"
        android:layout_alignBottom="@+id/preview"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_height="24dp">
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"/>
        <ImageView
            android:id="@+id/praise_image"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_collect_unfocus"/>
        <TextView
            android:id="@+id/praise_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="30dp"
            android:text="12"
            android:padding="4dp"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/comment_image"
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_comment_gray"/>
        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="30dp"
            android:text="12"
            android:padding="4dp"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"/>
</RelativeLayout>